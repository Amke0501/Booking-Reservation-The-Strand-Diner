{
  "version": 2,
  "builds": [
    {
      "src": "index.js",  // <--- Ensure this matches your main server file name (e.g., server.js or index.js)
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/.*",      // <--- Match all incoming requests (the root path / and all subpaths)
      "dest": "index.js" // <--- Route all requests to your main server file
    }
  ]
}